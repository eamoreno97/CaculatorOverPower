<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.visitante.caculator_overpower.Calculator">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="160dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:onClick="onClickHist"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/tvelements"
            android:layout_width="290dp"
            android:layout_height="100dp"
            android:onClick="onClickHist"
            android:textAlignment="textEnd"
            android:textSize="65sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvresults"
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:onClick="onClickHist"
            android:textAlignment="textEnd"
            android:textSize="35sp" />
    </LinearLayout>

    <Button
        android:id="@+id/button5"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@android:color/black"
        android:onClick="onClickBtn1"
        android:text="1"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_column="1"
        android:layout_marginTop="180dp"
        android:layout_row="0"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@android:color/black"
        android:onClick="onClickBtn2"
        android:text="2"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button7"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_column="2"
        android:layout_marginTop="180dp"
        android:layout_row="0"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@android:color/black"
        android:onClick="onClickBtn3"
        android:text="3"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button8"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_column="3"
        android:layout_marginTop="180dp"
        android:layout_row="0"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="?attr/colorButtonNormal"
        android:onClick="onClickRst"
        android:text="CA"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button9"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_column="0"
        android:layout_marginStart="8dp"
        android:layout_row="1"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@android:color/black"
        android:onClick="onClickBtn4"
        android:text="4"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:id="@+id/button10"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_column="1"
        android:layout_row="1"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@android:color/black"
        android:onClick="onClickBtn5"
        android:text="5"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/button9"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <Button
        android:id="@+id/button11"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_column="2"
        android:layout_row="1"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@android:color/black"
        android:onClick="onClickBtn6"
        android:text="6"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/button10"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/button12"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_column="3"
        android:layout_row="1"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="?attr/colorButtonNormal"
        android:onClick="onClickBtnSum"
        android:text="+"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/button11"
        app:layout_constraintTop_toBottomOf="@+id/button8" />

    <Button
        android:id="@+id/button13"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_column="0"
        android:layout_marginStart="8dp"
        android:layout_row="2"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@android:color/black"
        android:onClick="onClickBtn7"
        android:text="7"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button9" />

    <Button
        android:id="@+id/button14"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_column="1"
        android:layout_row="2"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@android:color/black"
        android:onClick="onClickBtn8"
        android:text="8"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/button13"
        app:layout_constraintTop_toBottomOf="@+id/button10" />

    <Button
        android:id="@+id/button15"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_column="2"
        android:layout_row="2"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@android:color/black"
        android:onClick="onClickBtn9"
        android:text="9"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/button14"
        app:layout_constraintTop_toBottomOf="@+id/button11" />

    <Button
        android:id="@+id/button16"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_column="3"
        android:layout_row="2"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="?attr/colorButtonNormal"
        android:onClick="onClickBtnRest"
        android:text="-"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/button15"
        app:layout_constraintTop_toBottomOf="@+id/button12" />

    <Button
        android:id="@+id/button20"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_column="3"
        android:layout_row="3"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="?attr/colorButtonNormal"
        android:onClick="onClickBtnResult"
        android:text="="
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/button25"
        app:layout_constraintTop_toBottomOf="@+id/button16" />

    <Button
        android:id="@+id/button23"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_column="0"
        android:layout_marginStart="8dp"
        android:layout_row="3"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@android:color/black"
        android:text="."
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button13" />

    <Button
        android:id="@+id/button24"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_column="1"
        android:layout_row="3"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@android:color/black"
        android:onClick="onClickBtn10"
        android:text="0"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/button23"
        app:layout_constraintTop_toBottomOf="@+id/button14" />

    <Button
        android:id="@+id/button25"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_column="2"
        android:layout_row="3"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@android:color/black"
        android:text="."
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/button24"
        app:layout_constraintTop_toBottomOf="@+id/button15" />

</android.support.constraint.ConstraintLayout>
